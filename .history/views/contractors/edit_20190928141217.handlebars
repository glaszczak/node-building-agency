<div class="card card-body">
  <h3>
    Edit Contractor
  </h3>
  <form action="/contractors/{{idContractor}}?_method=PUT" method="post">
    <div class="form-group">
      <label for="fullName">
        Full Name
      </label>
      <input
        type="text"
        class="form-control"
        name="fullName"
        value="{{contractors.fullName}}"
        required
      />
    </div>
    <div class="form-group">
      <label for="city">
        City
      </label>
      <input
        type="text"
        class="form-control"
        name="city"
        value="{{contractors.city}}"
        required
      />
    </div>
    <div class="form-group">
      <label for="address">
        Address
      </label>
      <input
        type="text"
        class="form-control"
        name="address"
        value="{{contractors.address}}"
        required
      />
    </div>
    <button class="btn btn-primary">
      Submit
    </button>
  </form>
</div>